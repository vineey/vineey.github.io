{
  "rules": {
    ".read": "auth != null && auth.provider == 'Github'  && root.child('users/' + auth.uid).exists()",
    ".write": "auth != null && auth.provider == 'Github'  && root.child('users/' + auth.uid).exists()",
    "users": {
      "$user_id": {
        ".read": "auth != null && auth.uid == $user_id",
        ".write": "auth != null && auth.uid == $user_id"
      }
    },
    "blogs": {
      ".read": "auth != null && root.child('users/' + auth.uid).exists()",
      ".write": "auth != null && root.child('users/'+ auth.uid).exists()"
    }
  }
}